NAME			=	cub3D

SRC_FILES		= 	src/parsing.c \
					get_next_line/get_next_line.c get_next_line/get_next_line_utils.c \
					utils/utils.c utils/ft_split.c utils/utils2.c \
				

OBJ_FILES		=	$(SRC_FILES:.c=.o)

HEADER_FILES	=	Includes/cub.h \
					get_next_line/get_next_line.h \
					utils/utils.h
				

CFLAGS			=	cc -Wall -Wextra -Werror #-Og -ffast-math

MLX_FLAGS		=	MLX/libglfw3.a MLX/libmlx42.a -framework \
					Cocoa -framework OpenGL -framework IOKit

RM				=	rm -f

all				:	$(NAME)

$(NAME)			:	$(OBJ_FILES)
					$(CFLAGS)  $(OBJ_FILES) $(MLX_FLAGS) -o $(NAME)

%.o				:	%.c $(HEADER_FILES)
					$(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ_FILES)


fclean:	clean
		@$(RM) $(NAME)

re:	fclean all